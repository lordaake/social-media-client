{
  "name": "css-frameworks-ca",
  "version": "1.0.0",
  "description": "Test",
  "main": "index.js",
  "scripts": {
    "build": "sass src/scss:dist/css",
    "start": "npm-run-all --parallel watch-css live-server",
    "watch-css": "sass --watch src/scss:dist/css",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,scss}\"",
    "prepare": "husky install",
    "test": "npm run test-unit",
    "test-unit": "jest",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "npm run cypress:run"
  },
  "keywords": [],
  "author": "Noroff",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "cypress": "^13.6.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.2.0",
    "lint-staged": "^15.2.0",
    "live-server": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "sass": "^1.54.8"
  },
  "dependencies": {
    "bootstrap-dark-5": "^1.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.html": [
      "prettier --write"
    ],
    "src/**/*.scss": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/testSetup.js"
    ]
  }
}